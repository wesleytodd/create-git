{
  "name": "create-git",
  "version": "1.0.0-2",
  "description": "Initalize a git repository with some helpful extras",
  "author": "Wes Todd <wes@wesleytodd.com>",
  "bin": {
    "create-git": "bin/create-git"
  },
  "keywords": [
    "git",
    "scaffold",
    "npm init",
    "create-*",
    "gitignore"
  ],
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:wesleytodd/create-git.git"
  },
  "scripts": {
